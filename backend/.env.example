# ===========================================
# Subscription Tracker API - Environment Variables
# ===========================================
# Copy this file to .env and update the values

# Application
APP_NAME="Subscription Tracker API"
APP_VERSION="1.0.0"
DEBUG=true

# Database
# SQLite for development:
DATABASE_URL="sqlite+aiosqlite:///./subscriptions.db"


# JWT Authentication (CHANGE THESE IN PRODUCTION!)
SECRET_KEY="your-super-secret-key-change-this-in-production-use-openssl-rand-hex-32"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Email Configuration (for email verification)
# Using Gmail example - you'll need to enable "App Passwords"
MAIL_USERNAME="example"
MAIL_PASSWORD="djdj jdjdd jdjdj jdjd"
MAIL_FROM="example@gmail.com"
MAIL_FROM_NAME="Subscription Tracker"
MAIL_PORT=587
MAIL_SERVER="smtp.gmail.com"

# CORS - Allowed Origins
# For development, allow all:
CORS_ORIGINS=["*"]
# For production, specify your app's domain:
# CORS_ORIGINS=["https://yourapp.com", "https://api.yourapp.com"]
